APP_NAME=territorial-intelligence-platform
APP_ENV=local
LOG_LEVEL=INFO
API_VERSION_PREFIX=/v1

# PostgreSQL + PostGIS
# Formato: postgresql+psycopg://usuario:senha@host:porta/database
DATABASE_URL=postgresql+psycopg://postgres:CHANGE_ME@localhost:5432/territorial_intelligence
MUNICIPALITY_IBGE_CODE=3121605
CRS_EPSG=4674

DATA_ROOT=data
ORCHESTRATOR_NAME=prefect
PIPELINE_VERSION=0.1.0

REQUEST_TIMEOUT_SECONDS=30
HTTP_MAX_RETRIES=3
HTTP_BACKOFF_SECONDS=1.5
BRONZE_RETENTION_DAYS=3650

IBGE_API_BASE_URL=https://servicodados.ibge.gov.br/api/v1/localidades
TSE_CKAN_BASE_URL=https://dadosabertos.tse.jus.br/api/3/action
MTE_FTP_HOST=ftp.mtps.gov.br
MTE_FTP_PORT=21
MTE_FTP_ROOT_CANDIDATES=/pdet/microdados/NOVO CAGED,/pdet/microdados/NOVO_CAGED
